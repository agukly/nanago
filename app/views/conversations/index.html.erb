<div class="ui segment">
 <h3>Mailbox</h3>
 <div class="ui list">
    <% @conversations.each do |conversation| %>
      <% if conversation.sender_id == current_user.id ||      conversation.recipient_id == current_user.id %>
        <% if conversation.sender_id == current_user.id %>
          <% recipient = User.find(conversation.recipient_id) %>
        <% else %>
          <% recipient = User.find(conversation.sender_id) %>
        <% end %>
      <% end %>
      <div class="message-item">
        <div class="message-card-product">
          <% if recipient.photo.attached? %>
            <%= cl_image_tag recipient.photo.key, class:"message-avatar" %>
          <% else %>
            <%= image_tag "default_avatar.png", class:"message-avatar" %>
          <% end %>
          <div class="message-card-product-infos">
            <h2><%= link_to recipient.first_name,   conversation_path(conversation), class: "recipient-link"%></h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="ui segment">
 <h3>All Users</h3>
  <div class="ui list">
    <% array = [] %>
    <% current_user.bookings.each do |booking| %>
      <% array.push(booking.pram.user) %>
    <% end %>

    <% array.uniq.each do |user| %>
       <div class="item">
        <%= user.first_name %> <%= link_to conversations_path(sender_id: current_user.id, recipient_id: user.id), method: "post" do%>
          <i class="fas fa-envelope"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
