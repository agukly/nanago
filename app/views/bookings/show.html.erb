<div class="container">
  <h1>My Booking</h1>
  <div class="row">
    <div class="col-sm">
      <h3><%="#{@booking.pram.brand} / #{@booking.pram.model}"%> </h3>
      <p class="text-primary"><i class="fa-map-marker-alt fa mr-1 text-primary"></i>
      <%=@booking.pram.location %></p>
      <p class="text-primary">Total price <%=@booking.total_price %>$</p>
    </div>
    <div class="col-sm">
      <p class="text-primary">From <%=@booking.start_day.strftime("%e %B %Y") %> to <%=@booking.end_day.strftime("%e %B %Y") %></p>
      <p><%=@booking.pram.description%></p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      <% if @pram.photos.attached? %>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="<%= cl_image_path @pram.photos[0].key, height: 300, width: 400, crop: :fill%>" >
            </div>
            <% @pram.photos[1..-1].each do |picture| %>
              <div class="carousel-item">
                <img class="d-block w-100" src="<%= cl_image_path picture.key, height: 300, width: 400, crop: :fill%>" >
              </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <% else %>
          <div
            id="map"
            style="width: 100%;
            height: 600px;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
          ></div>
      <% end %>
    </div>
    <div class="col-sm">
      <img class= "img-booking w-100" src="https://images.unsplash.com/photo-1562504208-03d85cc8c23e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80" alt="">
    </div>
  </div>
</div>


<div class="bookings-container">
<% if Date.today > @booking.end_day %>
  <div class="container">
    <div class="row">
      <div class="col-6 mx-auto py-5">
        <h3>Add a review</h3>
        <%= render 'reviews/form', booking: @booking, review: @review %>
      </div>
    </div>
  </div>
<% end %>
</div>
