<div class="container">
  <h1>My Booking</h1>
  <p>This is the booking the user has made. When the end day is after the day today the user is able to write a review.</p>
  <p class="text-primary"><i class="fa-map-marker-alt fa mr-1 text-primary"></i>
  <%=@booking.pram.location %></p>
  <p>from <%=@booking.start_day.strftime("%e %B %Y") %> to <%=@booking.end_day.strftime("%e %B %Y") %></p>
  <p class="text-primary"><%=@booking.total_price %>$ per Day</p>
  <div class="row">
    <div class="col-sm">
        <div class="card-trip-booking">
          <img class="img-booking" src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
          <div class="card-trip-infos-booking">
            <div>
              <h2><%="#{@booking.pram.brand} / #{@booking.pram.model}"%> </h2>
              <p><%=@booking.pram.description%></p>
            </div>
            <h2 class="card-trip-pricing-booking">Â£99.99</h2>
          </div>
          <div>
          <a class="btn btn-secondary btn-sm d-block justify-item-center m-2" href="pram-id" role="button">Detailed information</a>
          </div>
        </div>
    </div>
    <div class="col-sm">
      <img class= "img-booking w-100" src="https://images.unsplash.com/photo-1562504208-03d85cc8c23e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80" alt="">
    </div>
  </div>
</div>


<div class="bookings-container">
<% if Date.today > @booking.end_day %>
  <div class="container">
    <div class="row">
      <div class="col-6 mx-auto py-5">
        <h3>Add a review</h3>
        <%= render 'reviews/form', booking: @booking, review: @review %>
      </div>
    </div>
  </div>
<% end %>
</div>



