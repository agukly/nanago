
<div class="card-form container-md mt-3">
  <div class="row w-100 justify-content-center">
    <div class="col-6">
    <h2 class="text-center">New pram:</h2>
      <%= simple_form_for [@pram] do |f| %>
        <%= f.input :brand %>
        <%= f.input :model %>
        <%= f.input :year %>
        <%= f.input :location %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.submit class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
