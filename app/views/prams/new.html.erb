
<div class="container-fluid px-3 w-100">
  <div class="row min-vh-100 d-flex">
    <div class="col-md-8 col-lg-6 col-xl-5 d-flex align-items-center">
    <div class="w-100 py-5 px-md-5 p-xl-6 position-relative">
      <div class="mb-5">
        <%= image_tag "logo-main.png", class: "box-logo img-fluid mb-3" %>
        <h2 class="form-title">Create</h2>
        <div class="close-absolute mr-md-5 mr-xl-6 pt-5">
          <%= link_to prams_path do %>
          <i class="fas fa-times"></i>
          <% end %>
        </div>
      </div>
       <hr>
      <div class="form-validate">
        <%= simple_form_for [@pram] do |f| %>
          <%= f.input :brand %>
          <%= f.input :model %>
          <%= f.input :year %>
          <%= f.input :location %>
          <%= f.input :description %>
          <%= f.input :price %>
          <%= f.input :photos, as: :file, input_html: { multiple: true, class: 'd-none' }, label_html: { class: 'upload-photo'}, label: 'ğŸ“· Upload a photo' %>
          <%= f.submit class: "btn btn-lg btn-block btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-4 col-lg-6 col-xl-7 d-none d-md-block">
    <div style="background-image: url('https://images.unsplash.com/photo-1507041957456-9c397ce39c97?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=668&q=80');" class="side-pic bg-cover vh-100 mr-n3"></div>
  </div>
</div>
