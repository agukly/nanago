
<div class="navbar-size navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="d-flex justify-content-start align-items-center">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo-main.png" %> <%= image_tag "logo_writing.png", class: "nanago" %>
    <% end %>
     <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control">
        <input class="search-input form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-ghost">
          <i class="fas fa-search"></i>
        </button>
      </div>
    <% end %>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto align-items-center">
      <% if user_signed_in? %>
       <li class="nav-item">
        <%= link_to "Messages", conversations_path, class: "nav-link p-3" %>
      </li>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
               <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
               <%= image_tag "default_avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Profile", dashboard_path, class: "dropdown-item" %>
            <%= link_to "My Bookings", my_bookings_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
         <li class="nav-item">
          <%= link_to "Sign up", new_registration_path(User.new), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
