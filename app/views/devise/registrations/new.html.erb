<div class="container-fluid px-3 w-100">
  <div class="row min-vh-100 d-flex">
    <div class="col-md-8 col-lg-6 col-xl-5 d-flex align-items-top">
    <div class="w-100 py-5 px-md-5 p-xl-6 position-relative">
      <div class="mb-5">
        <%= image_tag "logo-main.png", class: "box-logo img-fluid mb-3" %>
        <h2 class="form-title">Sign up to NanaGo</h2>
        <div class="close-absolute mr-md-5 mr-xl-6 pt-5">
          <%= link_to root_path do %>
          <i class="fas fa-times"></i>
          <% end %>
        </div>
      </div>
       <hr>
             <div class="form-validate">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "fname" }%>
      <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "lname" }%>
      <%= f.input :photo,  as: :file, input_html: { class: 'd-none' }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo' %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions mb-3">
      <%= f.button :submit, "Sign up", class: "btn btn-flat btn-block" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
  <div class="col-md-4 col-lg-6 col-xl-7 d-none d-md-block">
    <div style="background-image: url('<%= image_path("pram_signup.jpg") %>');" class="side-pic bg-cover vh-100 mr-n3"></div>
  </div>
</div>
