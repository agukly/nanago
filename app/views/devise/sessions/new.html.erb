<div class="container-fluid px-3 w-100">
  <div class="row min-vh-100 d-flex">
    <div class="col-md-8 col-lg-6 col-xl-5 d-flex align-items-top">
    <div class="w-100 py-5 px-md-5 p-xl-6 position-relative">
      <div class="mb-5">
        <%= image_tag "logo-main.png", class: "box-logo img-fluid mb-3" %>
        <h2 class="form-title">Welcome, please login</h2>
        <div class="close-absolute mr-md-5 mr-xl-6 pt-5">
          <%= link_to root_path do %>
          <i class="fas fa-times"></i>
          <% end %>
        </div>
      </div>
       <hr>
      <div class="form-validate">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions mb-3">
    <%= f.button :submit, "Log in", class: "btn btn-flat btn-block" %>
  </div>
<% end %>

  <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
  <div class="col-md-4 col-lg-6 col-xl-7 d-none d-md-block">
    <div style="background-image: url('<%= image_path("pram_login.jpg") %>');" class="side-pic bg-cover vh-100 mr-n3"></div>
  </div>
</div>
